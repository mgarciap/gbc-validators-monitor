{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "bot",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "tsconfig-paths/register",
        "-r",
        "ts-node/register/transpile-only"
      ],

      //"args": ["src/bot.ts", "--example", "hello"],
      "args": ["src/index.ts"],

      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "node_modules/**"]
    }
  ]
}
